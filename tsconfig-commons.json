{
  "compilerOptions": {
    "outDir": "./lib",
    "typeRoots": [
      "node_modules/@types"
    ],
    "declaration": true,
    "declarationDir": "./",
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "module": "es6",
    "target": "es6",
    "jsx": "preserve",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": [
        "src/public-lib/*"
      ]
    },
    "lib":["es2015", "es2016.array.include", "dom"]
  },
  "exclude": ["./node_modules/*"],
  "include": [
    "src/public-lib/**/*"
  ],
  "compileOnSave": false
}
