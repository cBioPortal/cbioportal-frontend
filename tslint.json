{
    "extends": [
        "tslint:latest",
        "tslint-react"
    ],
    "rules": {
        "class-name": true,
        "comment-format": [
            true,
            "check-space"
        ],
        "curly": false,
        "indent": [
            true,
            "spaces"
        ],
        "jsx-no-multiline-js": false,
        "member-access": false,
        "no-consecutive-blank-lines":false,
        "no-duplicate-variable": true,
        "no-eval": true,
        "no-internal-module": true,
        "no-string-literal": false,
        "no-trailing-whitespace": false,
        "no-unsafe-finally": true,
        "no-var-keyword": true,
        "only-arrow-functions": false,
        "one-line": [
            true,
            "check-open-brace",
            "check-whitespace"
        ],
        "quotemark": [
            false,
            "single"
        ],
        "semicolon": [
            true,
            "always"
        ],
        "triple-equals": [
            true,
            "allow-null-check"
        ],
        "typedef-whitespace": [
            true,
            {
                "call-signature": "nospace",
                "index-signature": "nospace",
                "parameter": "nospace",
                "property-declaration": "nospace",
                "variable-declaration": "nospace"
            }
        ],
        "variable-name": [
            true,
            "ban-keywords"
        ],
        "max-line-length": [false],
        "whitespace": [
            true,
            {
                "check-branch": true,
                "check-decl": true,
                "check-operator": true,
                "check-separator": true,
                "check-type": true
            }
        ]
    }
}
