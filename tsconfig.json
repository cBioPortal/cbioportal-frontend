{
    "compilerOptions": {
        "outDir": "./tsDist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "module": "es6",
        "target": "es6",
        "jsx": "preserve",
        "allowJs": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "*": [
                "src/*",
                "node_modules/@types/*"
            ]
        },
        "lib":["es2015", "es2016.array.include", "dom"]
    },
    "exclude": ["./node_modules/*"],
    "include": [
        "./node_modules/@types/**/*",
        "./typings/**/*",
        "./src/**/*"
    ],
    "compileOnSave": false
}
