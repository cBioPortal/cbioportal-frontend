{
    "compilerOptions": {
        "rootDir": "./src/",
        "outDir": "./tsDist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "module": "es6",
        "target": "es6",
        "jsx": "preserve",
        "allowJs": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "./typings/index.d.ts",
        "./typings/missing.d.ts",
        "./src/**/*"
    ],
    "compileOnSave": false
}
