{
    "env": {
        "browser": true,
        "es6": true,
        "amd": true
    },
    "extends": ["airbnb"],

    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "globals": {
        "module": true,
        "__DEBUG__": true
    },
    "rules": {
        "indent": [
            2,
            4,
            {"SwitchCase": 1}
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "quotes": [
            2,
            "single"
        ],
        "semi": [
            2,
            "always"
        ],
        "react/jsx-indent":0,
        "import/no-unresolved":0,
        "react/jsx-filename-extension":0,
        "max-len":0,
        "import/imports-first":0,
        "import/no-extraneous-dependencies":0,
        "padded-blocks":0,
        "react/prefer-stateless-function":0,
        "comma-dangle":0
    }
}
